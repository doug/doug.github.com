---

<section class="resume-section" id="resume">
  <div class="resume-container">
    <header class="resume-header">
      <h2>Experience & Education</h2>
      <a href="/resume.pdf" class="download-link" target="_blank"
        >Download PDF</a
      >
    </header>

    <div class="resume-grid">
      <div class="main-col">
        <h3 class="section-label">Experience</h3>
        <div class="timeline-list">
          {
            experience.map((job) => (
              <div class="job-item">
                <div class="job-header">
                  <h4 class="job-role">{job.role}</h4>
                  <span class="job-company">{job.company}</span>
                </div>
                <div class="job-meta">
                  <span class="job-location">{job.location}</span>
                  <span class="job-period">{job.period}</span>
                </div>
                <p class="job-desc">{job.description}</p>
                <ul class="job-achievements">
                  {job.accomplishments.map((acc) => (
                    <li>{acc}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>

      <div class="side-col">
        <div class="resume-block">
          <h3 class="section-label">Education</h3>
          {
            education.map((edu) => (
              <div class="edu-item">
                <h4 class="edu-school">{edu.school}</h4>
                <ul class="edu-degrees">
                  {edu.degrees.map((d) => (
                    <li>{d}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>

        <div class="resume-block">
          <h3 class="section-label">Skills</h3>
          <div class="skills-cloud">
            {skills.map((skill) => <span class="skill-tag">{skill}</span>)}
          </div>
        </div>

        <div class="resume-block">
          <h3 class="section-label">Awards</h3>
          <ul class="simple-list">
            {awards.map((a) => <li>{a}</li>)}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .resume-section {
    padding: var(--space-2xl) var(--space-md);
    background: var(--color-bg-card);
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .resume-container {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .resume-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-xl);
    border-bottom: 2px solid var(--color-accent-purple);
    padding-bottom: var(--space-sm);
  }

  .resume-header h2 {
    font-size: 2rem;
    color: var(--color-text-main);
  }

  .download-link {
    font-family: var(--font-family-mono);
    font-size: 0.9rem;
    color: var(--color-accent-magenta);
    border: 1px solid var(--color-accent-magenta);
    padding: 0.5rem 1rem;
    border-radius: 4px;
  }

  .download-link:hover {
    background: rgba(213, 63, 140, 0.05);
  }

  .resume-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-2xl);
  }

  @media (max-width: 768px) {
    .resume-grid {
      grid-template-columns: 1fr;
    }
  }

  .section-label {
    font-family: var(--font-family-mono);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.85rem;
    margin-bottom: var(--space-lg);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding-bottom: 0.5rem;
  }

  /* Job Items */
  .job-item {
    margin-bottom: var(--space-xl);
  }

  .job-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.25rem;
  }

  .job-role {
    font-size: 1.25rem;
    color: var(--color-text-main);
  }

  .job-company {
    font-size: 1.1rem;
    color: var(--color-accent-cyan);
    font-weight: 600;
  }

  .job-meta {
    font-family: var(--font-family-mono);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-sm);
  }

  .job-period {
    margin-left: var(--space-md);
  }

  .job-desc {
    color: var(--color-text-main);
    margin-bottom: var(--space-sm);
  }

  .job-achievements {
    list-style-type: disc;
    padding-left: 1.2rem;
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .job-achievements li {
    margin-bottom: 0.25rem;
  }

  /* Side Col blocks */
  .resume-block {
    margin-bottom: var(--space-xl);
  }

  .edu-item {
    margin-bottom: var(--space-lg);
  }

  .edu-school {
    font-weight: 600;
    color: var(--color-text-main);
    margin-bottom: 0.25rem;
  }

  .edu-degrees {
    list-style: none;
    padding: 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .skills-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    background: rgba(0, 0, 0, 0.05);
    color: var(--color-text-main);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.85rem;
    font-family: var(--font-family-mono);
  }

  .simple-list {
    padding-left: 1.2rem;
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .simple-list li {
    margin-bottom: 0.25rem;
  }
</style>
