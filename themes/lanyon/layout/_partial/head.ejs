<head>
  <link href="http://gmpg.org/xfn/11" rel="profile">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="content-type" content="text/html; charset=utf-8">

  <!-- Enable responsiveness on mobile devices-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">

  <title>
    <% if (page.title == "Home") { %>
      <%= site.title %> &middot; <%= site.tagline %>
    <% } else { %>
      <%= page.title %> &middot; <%= site.title %>
    <% } %>
  </title>

  <!-- CSS -->
  <link rel="stylesheet" href="<%- config.root %>css/poole.css">
  <link rel="stylesheet" href="<%- config.root %>css/syntax.css">
  <link rel="stylesheet" href="<%- config.root %>css/lanyon.css">
  <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Serif:400,400italic,700%7CPT+Sans:400">

  <!-- Icons -->
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="<%- config.root %>apple-touch-icon-precomposed.png">
  <link rel="shortcut icon" href="<%- config.root %>favicon.ico">

  <!-- RSS -->
  <link rel="alternate" type="application/rss+xml" title="RSS" href="<%- config.root %>atom.xml">
</head>
