<div class="post">
  <h1 class="post-title"><%= page.title %></h1>
  <span class="post-date"><%= page.date %></span>
  <%- page.content %>
</div>

<div class="related">
  <h2>Related Posts</h2>
  <ul class="related-posts">
      <li>
        <h3>
          <a href="{{ site.baseurl }}{{ post.url }}">
            {{ post.title }}
            <small>{{ post.date }}</small>
          </a>
        </h3>
      </li>
  </ul>
</div>
