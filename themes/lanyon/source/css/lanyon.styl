.sidebar-overlay
  #sidebar-checkbox
    &:checked
      & ~ .wrap
        transform translateX(0)
      & ~ .sidebar-toggle
        box-shadow 0 0 0 .25rem #fff
      & ~ .sidebar
        box-shadow .25rem 0 .5rem rgba(0,0,0,.1)
